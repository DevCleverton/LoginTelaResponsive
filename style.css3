* {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

* {
  margin: 0;
  padding: 0;
  font-family: sans-serif;
}

.section {
  text-align: center;
  padding: 100px 0;
}

.bg-gradient {
  background: linear-gradient(50deg, #ff4169, #7c26f8);
  color: rgb(49, 43, 43);
}

.slider {
  margin: 10px auto;
  width: 500px;
}

. {
  background-color: rgb(255, 249, 249);
  padding: 20px;
  border: 1px solid #111;
  color: initial;
}